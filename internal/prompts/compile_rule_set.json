{
  "name": "compile_rule_set.json",
  "description": "Compiles a rule set definition into a finalized list of rule files with references resolved.",
  "instructions": "Execute compile_rule_set.json based on the declared schema and standards.",
  "uses_standards": [
    "compiled_rule_set_schema.json",
    "rule_set_schema.json"
  ],
  "schema": {
    "inputs": {
      "type": "object",
      "properties": {
        "rule_set_definition": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "rules": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "name",
            "rules"
          ]
        }
      },
      "required": [
        "rule_set_definition"
      ]
    },
    "outputs": {
      "type": "object",
      "properties": {
        "compiled_rule_set": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "compiled_rules": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "name",
            "compiled_rules"
          ]
        }
      },
      "required": [
        "compiled_rule_set"
      ]
    }
  },
  "example_input": {
    "rule_set_definition": {
      "name": "Core Access Controls",
      "rules": [
        "ENF-R001.json",
        "VAL-R004.json"
      ]
    }
  },
  "example_output": {
    "compiled_rule_set": {
      "name": "Core Access Controls",
      "compiled_rules": [
        "All access must be authenticated.",
        "Reject invalid inputs."
      ]
    }
  },
  "input_schema": {
    "type": "object",
    "required": [
      "rule_set_definition"
    ],
    "properties": {
      "rule_set_definition": {
        "type": "object",
        "description": "Definition of a rule set including name, category, and rules."
      }
    }
  },
  "output_schema": {
    "type": "object",
    "required": [
      "compiled_rule_set"
    ],
    "properties": {
      "compiled_rule_set": {
        "type": "object",
        "description": "Compiled version of the rule set ready for deployment."
      }
    }
  }
}