{
  "name": "validate_provisional_rule.json",
  "description": "Validates rules in the provisional folder to ensure correct format and readiness for promotion.",
  "instructions": "Execute the purpose of `validate_provisional_rule.json` using the schema-defined structure and rules.",
  "schema": {
    "inputs": {
      "type": "object",
      "description": "Map of provisional rule filenames to their file content.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "graduation_datetime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "text",
          "graduation_datetime"
        ],
        "additionalProperties": false
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {
                "type": "string"
              },
              "valid": {
                "type": "boolean"
              },
              "errors": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "filename",
              "valid",
              "errors"
            ]
          }
        }
      },
      "required": [
        "results"
      ]
    }
  },
  "example_input": {
    "ENF-R007.json": {
      "text": "Responses must never leak authentication status.",
      "graduation_datetime": "2025-06-01T00:00:00Z"
    }
  },
  "example_output": {
    "results": [
      {
        "filename": "ENF-R007.json",
        "valid": true,
        "errors": []
      }
    ]
  }
}