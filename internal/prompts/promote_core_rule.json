{
  "name": "promote_core_rule.json",
  "description": "Promotes any rules in the provisional folder that have reached or passed their graduation_datetime.",
  "instructions": "Execute the purpose of `promote_core_rule.json` using the schema-defined structure and rules.",
  "schema": {
    "inputs": {
      "type": "object",
      "description": "A map of filenames to rule data from the provisional folder.",
      "properties": {
        "provisional_rules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "graduation_datetime": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": [
              "text",
              "graduation_datetime"
            ]
          }
        },
        "current_datetime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "provisional_rules",
        "current_datetime"
      ]
    },
    "outputs": {
      "type": "object",
      "description": "List of filenames ready for promotion.",
      "properties": {
        "promotions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "promotions"
      ]
    }
  },
  "example_input": {
    "provisional_rules": {
      "ENF-R006.json": {
        "text": "All API endpoints must require authentication.",
        "graduation_datetime": "2025-04-28T00:00:00Z"
      },
      "VAL-R002.json": {
        "text": "User inputs must be type-validated before use.",
        "graduation_datetime": "2025-05-01T00:00:00Z"
      }
    },
    "current_datetime": "2025-05-01T00:00:00Z"
  },
  "example_output": {
    "promotions": [
      "ENF-R006.json",
      "VAL-R002.json"
    ]
  }
}